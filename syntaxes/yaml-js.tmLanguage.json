{
    "name": "yaml-template",
    "scopeName": "inline.ts",
    "injectionSelector": "L:source -comment",
    "comment": "JS YAML Templates",
    "patterns": [  
      {
        "include": "#interpolation"
      }
    ],
    "repository": {
        "interpolation": {
          "contentName": "meta.embedded.line.ts",
          "begin": "\\${",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.template-expression.begin.ts"
            }
          },
          "end": "}",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.template-expression.end.ts"
            }
          },
          "name": "variable.interpolation.yaml",
          "patterns": [
            {
              "contentName": "meta.embedded.line.ts",
              "include": "source.ts#expression"
            }
          ]
        }
    }
  }